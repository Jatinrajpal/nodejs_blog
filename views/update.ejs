<%- include ('layouts/header') -%>

<form method="post" action="/articles/update/<%= article._id %>" >
  <div class="form-group">
    <label for="title">Title</label>
    <input required type="text" class="form-control" id="title" aria-describedby="emailHelp" placeholder="Enter title" name="title" value=<%= article.title %>>
  </div>

  <div class="form-group">
      <label for="body">Content</label>
      <textarea  required class="md-textarea form-control" rows="3" type="text" maxlength="100" class="form-control" id="body" placeholder="Content" name='body' ><%= article.body %></textarea>
    </div>
  <div class="form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">Check me out</label>
  </div>
  <button type="submit" class="btn btn-primary">update</button>
</form>

<%- include ('layouts/footer') -%>